<Page x:Class="FcnProgramm.Page_Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FcnProgramm"
      mc:Ignorable="d" 
      d:DesignHeight="385" d:DesignWidth="215"
      Title="Page_Profile">

    <Grid Background="Wheat">
        <Button Content="Ваше фото" Margin="71,22,70,283" RenderTransformOrigin="0.5,0.5">
            <Button.Template>
                <ControlTemplate  TargetType="Button">
                    <Grid>
                        <Ellipse Fill="LightYellow"></Ellipse>
                        <Label Content="{TemplateBinding Content}" HorizontalAlignment="Center"
                               VerticalAlignment="Center"></Label>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="a2" Content="Пара" MinWidth="35" Margin="10,126,10,179" FontFamily="Times New Roman" FontSize="22" ClickMode="Press"/>
        <Button x:Name="a3" Content="Кнопок" MinWidth="35" Margin="10,252,10,53" FontFamily="Times New Roman" FontSize="22" ClickMode="Press"/>
    </Grid>
</Page>
